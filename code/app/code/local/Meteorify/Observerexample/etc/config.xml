<?xml version="1.0"?>
<config>
    <modules>
        <Meteorify_Observerexample>
            <version>0.0.1</version>
        </Meteorify_Observerexample>
    </modules>
    <global>
        <models>
            <meteorifyobserverexample>
                <class>Observerexample_Model</class>
            </meteorifyobserverexample>
        </models>
        <events>
            <customer_login>
                <observers>
                    <meteorify_observerexample_model_observer>
                        <type>singleton</type>
                        <class>Meteorify_Observerexample_Model_Observer</class>
                        <method>send_email</method>
                    </meteorify_observerexample_model_observer>
                </observers>
            </customer_login>
            <customer_logout>
                <observers>
                    <meteorify_observerexample_model_observer>
                        <type>singleton</type>
                        <class>Meteorify_Observerexample_Model_Observer</class>
                        <method>customerLogout</method>
                    </meteorify_observerexample_model_observer>
                </observers>
            </customer_logout>
            <checkout_onepage_controller_success_action>
            	<observers>
              		<meteorify_observerexample_model_observer>
                		<type>singleton</type>
                		<class>Meteorify_Observerexample_Model_Observer</class>
                		<method>paymentObserver</method>
              		</meteorify_observerexample_model_observer>
            	</observers>
          	</checkout_onepage_controller_success_action>
        </events>
    </global>
</config>